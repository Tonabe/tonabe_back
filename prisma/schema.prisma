generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Produto {
  id        Int       @id @default(autoincrement())
  nome      String
  lacre     Boolean
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Servico   Servico[]
  Meta      Meta[]
}

model Funcionario {
  id            Int       @id @default(autoincrement())
  nome          String
  dataDeContratacao DateTime
  Servico       Servico[]
}

model Servico {
  id            Int      @id @default(autoincrement())
  idFuncionario Int
  idProduto     Int
  quantidade    Float
  duracao       Float
  meta          Float
  data          DateTime

  // Definição das chaves estrangeiras
  funcionario Funcionario @relation(fields: [idFuncionario], references: [id])
  produto     Produto     @relation(fields: [idProduto], references: [id])
}

model Meta {
  id        Int      @id @default(autoincrement())
  meta      Float
  data      DateTime
  idProduto Int

  produto Produto @relation(fields: [idProduto], references: [id]) // Chave estrangeira do produto
}
